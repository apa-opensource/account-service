{% extends 'FNCAccountBundle::base.html.twig' %}

{% block content -%}
{{ parent() }}

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>{{ knp_pagination_sortable(pagination, 'Id', 'a.id') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'Type', 'a.type') }}</th>
                    <th>Disabled</th>
                    <th>Number</th>
                    <th>Pin</th>
                    <th>{{ knp_pagination_sortable(pagination, 'Balance', 'a.balance') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'Currency', 'a.currency') }}</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in pagination %}
                <tr>
                    <td><a href="{{ path('management_account_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.type|trans }}</td>
                    <td>{{ ('account.disabled.' ~ entity.disabled|number_format)|trans }}</td>
                    <td>{{ entity.number }}</td>
                    <td>{{ entity.pin }}</td>
                    <td>{{ (entity.balance / 100)|number_format(2, '.', '') }}</td>
                    <td>{{ entity.currency }}</td>
                    <td>
                        <a href="{{ path('management_account_show', { 'id': entity.id }) }}">
                            <button type="button" class="btn btn-default btn-sm">
                                <span class="glyphicon glyphicon-eye-open"></span>
                            </button>
                        </a>
                        <a href="{{ path('management_account_edit', { 'id': entity.id }) }}">
                            <button type="button" class="btn btn-default btn-sm">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </button>
                        </a>
                        <a data-target="modal" href="{{ path('management_account_booking', { 'id': entity.id }) }}">
                            <button type="button" class="btn btn-default btn-sm">
                                <span class="glyphicon glyphicon-euro"></span>
                            </button>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="row">
            <div class="col-md-12">
            {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
